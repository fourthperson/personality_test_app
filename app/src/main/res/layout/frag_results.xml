<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimaryVariant">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/close_button"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_16sdp"
                android:background="?selectableItemBackgroundBorderless"
                android:padding="@dimen/_4sdp"
                app:srcCompat="@drawable/ic_close"
                app:tint="@color/white" />

            <TextView
                style="@style/TextWhite"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:fontFamily="@font/medium"
                android:text="@string/title_results"
                android:textSize="@dimen/text18" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/top_bar"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/size28">

            <TextView
                android:id="@+id/text_question"
                style="@style/TextWhite"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/size32"
                android:width="@dimen/_240sdp"
                android:minLines="6"
                android:textSize="@dimen/text16" />

            <TextView
                android:id="@+id/button_close"
                style="@style/ButtonPri"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/size16"
                android:text="@string/go_back"
                android:textSize="@dimen/text16" />

        </LinearLayout>

    </RelativeLayout>

    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfetti"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>